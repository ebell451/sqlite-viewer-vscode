{
  "icon": "documentation/icon.png",
  "name": "sqlite-viewer",
  "displayName": "SQLite Viewer",
  "description": "SQLite Viewer for VSCode",
  "version": "0.0.17",
  "publisher": "qwtel",
  "private": true,
  "license": "LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/qwtel/sqlite-viewer-vscode"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:sqlite.view"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sql",
        "extensions": [
          ".sqlite",
          ".db",
          ".sqlite3",
          ".db3"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "sqlite.view",
        "displayName": "SQLite Viewer",
        "selector": [
          {
            "filenamePattern": "*.sqlite"
          },
          {
            "filenamePattern": "*.sqlite3"
          },
          {
            "filenamePattern": "*.db"
          },
          {
            "filenamePattern": "*.db3"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile:ext": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs",
    "compile:view": "echo \"export * from './uilib20'\" > ./sqlite-viewer-app/src/uilib.js && esbuild ./sqlite-viewer-app/src/index.js --loader:.js=jsx --bundle --define:process.env.NODE_ENV=\"'production'\" --external:worker-loader!./worker.js --outfile=./sqlite-viewer-app/public/bundle.js && echo \"export * from './uilib95'\" > ./sqlite-viewer-app/src/uilib.js",
    "compile:worker": "esbuild ./sqlite-viewer-app/src/worker.js --bundle --external:fs --external:path --define:process.env.NODE_ENV=\"'production'\" --outfile=./sqlite-viewer-app/public/bundle-worker.js",
    "compile": "npm run compile:ext & npm run compile:view & npm run compile:worker & wait",
    "pack": "vsce package --baseContentUrl=https://raw.githubusercontent.com/qwtel/sqlite-viewer-vscode/master/",
    "publish": "vsce publish --baseContentUrl=https://raw.githubusercontent.com/qwtel/sqlite-viewer-vscode/master/"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "@types/vscode": "^1.60.0",
    "esbuild": "^0.13.3",
    "typescript": "^4.4.3",
    "vsce": "^1.100.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.25"
  }
}
