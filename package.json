{
  "name": "sqlite-viewer",
  "displayName": "SQLite Viewer",
  "description": "SQLite Viewer for VSCode",
  "version": "0.0.1",
  "publisher": "qwtel",
  "private": true,
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/qwtel/sqlite-viewer-vscode"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:catCustoms.catScratch",
    "onCustomEditor:catCustoms.pawDraw",
    "onCustomEditor:sqlite.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sql",
        "extensions": [
          ".sqlite",
          ".db",
          ".sqlite3",
          ".db3"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "catCustoms.catScratch",
        "displayName": "Cat Scratch",
        "selector": [
          {
            "filenamePattern": "*.cscratch"
          }
        ]
      },
      {
        "viewType": "catCustoms.pawDraw",
        "displayName": "Paw Draw",
        "selector": [
          {
            "filenamePattern": "*.pawdraw"
          }
        ]
      },
      {
        "viewType": "sqlite.view",
        "displayName": "SQLite Viewer",
        "selector": [
          {
            "filenamePattern": "*.sqlite"
          },
          {
            "filenamePattern": "*.sqlite3"
          },
          {
            "filenamePattern": "*.db"
          },
          {
            "filenamePattern": "*.db3"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "catCustoms.pawDraw.new",
        "title": "Create new Paw Draw Document",
        "category": "Paw Draw"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile:ext": "esbuild ./src/extension.ts --bundle --minify --outfile=out/extension.js --external:vscode --format=cjs",
    "compile:view": "esbuild ./sqlite-viewer-app/src/index.js --loader:.js=jsx --bundle --minify --define:process.env.NODE_ENV=\"'production'\" --external:worker-loader!./worker.js --outfile=./sqlite-viewer-app/public/bundle.js",
    "compile:worker": "esbuild ./sqlite-viewer-app/src/worker.js --bundle --minify --external:fs --external:path --define:process.env.NODE_ENV=\"'production'\" --outfile=./sqlite-viewer-app/public/bundle-worker.js",
    "compile": "npm run compile:ext & npm run compile:view & npm run compile:worker & wait"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.52.0",
    "esbuild": "^0.12.28",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.22"
  }
}
